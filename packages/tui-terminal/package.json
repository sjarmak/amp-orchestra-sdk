{
  "name": "@ampsm/tui-terminal",
  "version": "0.1.0",
  "description": "Terminal UI framework and integration for amp-orchestra",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./framework": {
      "types": "./dist/framework/index.d.ts",
      "import": "./dist/framework/index.js"
    },
    "./widgets": {
      "types": "./dist/widgets/index.d.ts",
      "import": "./dist/widgets/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --target node20",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs --target node20"
  },
  "dependencies": {
    "@ampsm/amp-client": "workspace:*",
    "@ampsm/workspace": "workspace:*",
    "@ampsm/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  },
  "keywords": [
    "tui",
    "terminal",
    "cli",
    "amp",
    "widgets",
    "framework"
  ]
}

{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Amp Orchestra",
  "version": "0.1.0",
  "identifier": "com.sjarmak.amp-orchestra",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "theme": null,
        "backgroundColor": "#ffffff"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": ["*"],
          "permissions": [
            "core:window:allow-start-dragging"
          ]
        },
        {
          "identifier": "amp-commands",
          "windows": ["*"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:event:allow-unlisten",
            "shell:allow-execute",
            "shell:allow-spawn",
            "dialog:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "src/resources/*"
    ]
  }
}
